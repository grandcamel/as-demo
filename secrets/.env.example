# =============================================================================
# AS-Demo Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# Enabled platforms (comma-separated)
ENABLED_PLATFORMS=confluence,jira,splunk

# Session management
SESSION_TIMEOUT_MINUTES=60
MAX_QUEUE_SIZE=10
SESSION_SECRET=your-secure-random-string-here

# Claude Authentication (at least one required)
CLAUDE_CODE_OAUTH_TOKEN=
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Confluence Configuration
# -----------------------------------------------------------------------------
CONFLUENCE_API_TOKEN=your-confluence-api-token
CONFLUENCE_EMAIL=your-email@example.com
CONFLUENCE_SITE_URL=https://your-site.atlassian.net
DEMO_SPACE_KEY=CDEMO

# -----------------------------------------------------------------------------
# JIRA Configuration
# -----------------------------------------------------------------------------
JIRA_API_TOKEN=your-jira-api-token
JIRA_EMAIL=your-email@example.com
JIRA_SITE_URL=https://your-site.atlassian.net
DEMO_PROJECT_KEY=DEMO

# -----------------------------------------------------------------------------
# Splunk Configuration
# -----------------------------------------------------------------------------
SPLUNK_URL=https://splunk:8089
SPLUNK_WEB_URL=http://splunk:8000
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=DemoPass123!
SPLUNK_HEC_TOKEN=demo-hec-token-12345

# -----------------------------------------------------------------------------
# Optional: Production Settings
# -----------------------------------------------------------------------------
# BASE_URL=https://demo.example.com
# ALLOWED_ORIGINS=https://demo.example.com
# COOKIE_SECURE=true
