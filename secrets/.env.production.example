# =============================================================================
# AS-Demo Production Environment Configuration
# =============================================================================
# Copy this file to .env and fill in production values.
#
# IMPORTANT: Generate SESSION_SECRET with: openssl rand -base64 32
# =============================================================================

# -----------------------------------------------------------------------------
# Domain Configuration (REQUIRED for production)
# -----------------------------------------------------------------------------
BASE_URL=https://demo.assistant-skills.dev
ALLOWED_ORIGINS=https://demo.assistant-skills.dev
NODE_ENV=production
COOKIE_SECURE=true

# -----------------------------------------------------------------------------
# Session Security (REQUIRED)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
SESSION_SECRET=<generate-random-64-char-string>
SESSION_TIMEOUT_MINUTES=60
MAX_QUEUE_SIZE=10

# -----------------------------------------------------------------------------
# Claude Authentication (at least one required)
# -----------------------------------------------------------------------------
# OAuth token for Claude Code
CLAUDE_CODE_OAUTH_TOKEN=

# Alternative: Anthropic API key
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Enabled Platforms (comma-separated)
# -----------------------------------------------------------------------------
# Options: confluence, jira, splunk
# Note: Splunk requires 4GB+ RAM
ENABLED_PLATFORMS=confluence,jira,splunk

# -----------------------------------------------------------------------------
# Confluence Platform
# -----------------------------------------------------------------------------
CONFLUENCE_API_TOKEN=
CONFLUENCE_EMAIL=
CONFLUENCE_SITE_URL=https://your-site.atlassian.net
DEMO_SPACE_KEY=CDEMO

# -----------------------------------------------------------------------------
# JIRA Platform
# -----------------------------------------------------------------------------
JIRA_API_TOKEN=
JIRA_EMAIL=
JIRA_SITE_URL=https://your-site.atlassian.net
DEMO_PROJECT_KEY=DEMO

# -----------------------------------------------------------------------------
# Splunk Platform (optional - requires 4GB+ RAM)
# -----------------------------------------------------------------------------
# Leave SPLUNK_PASSWORD empty to disable Splunk
SPLUNK_URL=https://localhost:8089
SPLUNK_WEB_URL=http://localhost:8000
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=
SPLUNK_HEC_TOKEN=

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
OTEL_SERVICE_NAME=as-demo-queue-manager
OTEL_EXPORTER_OTLP_ENDPOINT=http://lgtm:4318

# -----------------------------------------------------------------------------
# Admin Settings (optional)
# -----------------------------------------------------------------------------
# Email for Let's Encrypt certificate notifications
ADMIN_EMAIL=admin@assistant-skills.dev
